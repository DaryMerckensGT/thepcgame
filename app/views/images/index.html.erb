<p id="notice"><%= notice %></p>

<%= link_to 'New Image', new_image_path %>

<% sizer = "grid-sizer" %>
<div class="grid">
  <% @images.each do |image| %>
    <div class="grid-item <%= sizer %> col-xs-12 col-sm-6 col-md-3 col-lg-2"><% sizer = "" %>
      <div class="panel panel-default">
        <div class="panel-body">
          <img src="<%= image.image.url(:preview) %>" onclick="showImage('<%= image.image.url(:preview) %>', '<%= image.image.url(:large) %>');"/>
        </div>
      </div>
    </div>
  <% end %>
  
  <div id="largeImgPanel" onclick="this.style.display='none'">
    <img id="largeImg" style="height:100%; margin:0; padding:0;" />
  </div>
</div>